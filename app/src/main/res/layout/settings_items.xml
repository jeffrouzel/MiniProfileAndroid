<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/labelInfo"
        android:layout_width="@dimen/no_space"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/arrowButton"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/textInformation"/>

    <Button
        android:id="@+id/arrowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/labelInfo"
        app:layout_constraintBottom_toBottomOf="@id/labelInfo"
        style="@style/buttonSeeinfo"/>
</androidx.constraintlayout.widget.ConstraintLayout>
