<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textTitles" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textLabels" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="textInformation" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/small_space</item>
        <item name="android:paddingBottom">@dimen/normal_space</item>
        <item name="android:paddingStart">@dimen/normal_space</item>
        <item name="android:paddingEnd">@dimen/normal_space</item>
    </style>

    <style name="buttonLinks" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:padding">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="buttonSeeinfo" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="buttonEdit" parent="Widget.AppCompat.Button">
        <item name="android:buttonCornerRadius">@dimen/medium_space</item>
    </style>

    <style name="buttonLogout" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/big_text</item>
    </style>

    <style name="buttonBack" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/big_text</item>
    </style>
</resources>